extends layout

block content
.w3-container
    if locals.user
      h4 You are logged in!
    else
      h4 You are not logged in! Please #[a(href="/login") Log In] to continue.
  h1 #{title}: #{artist.name}

  
  if artist_songs.length
  
    p #[strong Delete the following songs before attempting to delete this artist.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Songs
    
      dl
      each song in artist_songs
        dt 
          a(href=song.url) #{song.title}
 

  else
    p Do you really want to delete this artist?
    
    form(method='POST' action='')
      div.form-group
        input#artistid.form-control(type='hidden',name='artistid', required='true', value=artist._id )

      button.btn.btn-primary(type='submit') Delete