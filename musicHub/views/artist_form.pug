extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='artistName') Artist Name:
      input#name.form-control(type='text' placeholder='Artist name...' name='name' required='true' value=(undefined===artist ? '' : artist.name) )
      label(for='description') Description:
      input#description.form-control(type='textarea' placeholder='Description...' name='description' required='true' value=(undefined===artist ? '' : artist.description))
    div.form-group
      label(for='imageUrl') URL image :
      input#imageUrl.form-control(type='text' placeholder='URL image...' name='imageUrl' required='true' value=(undefined===artist ? '' : artist.imageUrl))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg