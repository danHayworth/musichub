extends layout

block content

  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='email') Email:
      input#name.form-control(type='text' placeholder='email...' name='email' required='true' value=(undefined===user ? '' : user.email) )
      label(for='password1') Password:
      input#pass1.form-control(type='textarea' placeholder='password...' name='pass1' required='true')
      label(for='password2') Password:
      input#pass2.form-control(type='textarea' placeholder='password...' name='pass2' required='true')
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg